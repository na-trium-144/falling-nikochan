  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021", "es2023"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react",
    "resolveJsonModule": true
