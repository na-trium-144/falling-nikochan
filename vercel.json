{
  "installCommand": "rm -f package-lock.json && bun i --frozen-lockfile",
  "buildCommand": "bun nbuild",
  "outputDirectory": "out",
  "devCommand": null,
  "framework": null,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/share/([0-9]+.*)",
      "destination": "/api"
    },
    {
      "source": "/_next/static/chunks/app/share/([0-9]+/.*)",
      "destination": "/api"
    },
    {
      "source": "/edit/(.*)",
      "destination": "/api"
    }
  ]
}
