{
  "name": "falling-nikochan",
  "private": true,
  "type": "module",
  "scripts": {
    "chart:lint": "cd chart && eslint src/",
    "i18n:lint": "cd i18n && eslint",
    "route:lint": "cd route && eslint src/",
    "frontend:lint": "cd frontend && tsc --noEmit && eslint app/",
    "lint": "npm run chart:lint && npm run i18n:lint && npm run route:lint && npm run frontend:lint",
    "chart:t": "cd chart && tsc",
    "route:t": "cd route && tsc",
    "i18n:t": "cd i18n && node verifyKeys.js",
    "t": "npm run chart:t && npm run route:t && npm run i18n:t",
    "prepare": "npm run t",
    "mongo-docker": "docker run --rm -p 27017:27017 -d mongodb/mongodb-community-server:latest",
    "ndev": "cd frontend && next dev -H 0.0.0.0",
    "nbuild": "cd frontend && node ./woff2sfnt.js && next build",
    "ldev": "cd route/ && tsx watch serve-local.ts",
    "bdev": "cd route/ && bun run --hot serve-bun.ts"
  },
  "workspaces": [
    "chart",
    "i18n",
    "frontend",
    "route"
  ],
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@types/bun": "^1.2.4",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "eslint": "^9.19.0",
    "eslint-config-next": "^15.2.1",
    "eslint-config-prettier": "^10.0.2",
    "globals": "^16.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom"
  }
}
