{
  "name": "falling-nikochan",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=23.6"
  },
  "scripts": {
    "lint": "tsc && pnpm run -r --if-present lint",
    "format": "prettier --write .",
    "test": "pnpm run -r --if-present test",
    "mongo-docker": "docker run --rm -p 27017:27017 -d mongodb/mongodb-community-server:latest",
    "ndev": "pnpm run --filter frontend dev",
    "nbuild": "pnpm run --filter frontend build && pnpm run --filter frontend postbuild",
    "swbuild": "pnpm run --filter worker build && pnpm run --filter frontend postbuild",
    "ldev": "pnpm run --filter route dev"
  },
  "workspaces": [
    "chart",
    "i18n",
    "frontend",
    "route",
    "worker"
  ],
  "dependencies": {
    "@falling-nikochan/route": "workspace:*",
    "@next/mdx": "15.5.9",
    "@vercel/og": "^0.8.6",
    "colorthief": "^2.6.0",
    "hono": "^4.11.4",
    "next": "15.5.9",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@types/chai": "^5.2.3",
    "@types/colorthief": "^2.6.0",
    "@types/node": "22.15.19",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "babel-loader": "^10.0.0",
    "chai": "^6.2.2",
    "core-js": "^3.42.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "15.5.9",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.38.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-license-plugin": "^4.5.1"
  },
  "pnpm": {
    "overrides": {
      "sharp": "^0.34"
    }
  }
}
